{
    "version": "nightly",
    "description": "An AI code editor",
    "homepage": "https://www.cursor.com/",
    "license": "freeware",
    "architecture": {
        "64bit": {
            "url": "https://anysphere-binaries.s3.us-east-1.amazonaws.com/production/e4fc23c60ef62209e553b27d9f73262d5067f128/win32/x64/user-setup/CursorUserSetup-x64-0.45.17.exe"
        }
    },
    "installer": {
        "script": [
            "$file = (Get-ChildItem \"$dir\" 'x64' | Select-Object -First 1).FullName",
            "Expand-7ZipArchive \"$file\" \"$dir\\\" -Removal",
            "Expand-7ZipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal",
            "Remove-Item \"$dir\\`$PLUGINSDIR\",\"$dir\\`$R0\",\"$dir\\`$LOCALAPPDATA\"  -Force -Recurse"
        ]
    },
    "shortcuts": [
        [
            "Cursor.exe",
            "Cursor"
        ]
    ]
}
